<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="become_cooperator_lafeixa" inherit_id="easy_my_coop_es.become_cooperator_es" name="Become cooperator">
            <xpath expr="//div[@name='share_div']" position="after">
                <div t-attf-class="form-group">
                    <label class="col-md-3 col-sm-4 control-label" for="voluntary_contribution">Voluntary contribution</label>
                    <div class="col-md-7 col-sm-8 bottom-line" style="padding-bottom:20px">
                        <input type="number" class="form-control" name="voluntary_contribution"/>
                    </div>
                </div>
                <div t-attf-class="form-group">
                    <label class="col-md-3 col-sm-4 control-label" for="unit_composition">Unit composition</label>
                    <div class="col-md-7 col-sm-8 bottom-line" style="padding-bottom:20px">
                        <input type="number" class="form-control" name="unit_composition"/>
                    </div>
                </div>
                <div t-attf-class="form-group">
                    <label class="col-md-3 col-sm-4 control-label" for="join_commission">Join commission</label>
                    <select name="join_commission" class="col-md-7 col-sm-8 form-control"
                        required="True"
                        style="width:54%;margin-left:15px">
                    <option value=""></option>
                    <t t-foreach="commissions or []" t-as="type">
                        <option t-att-value="type[0]" t-att-selected="type[0] == commission"><t t-esc="type[1]"/></option>
                    </t>
                    </select>
                </div>
            </xpath>
        </template>
    </data>
</odoo>
