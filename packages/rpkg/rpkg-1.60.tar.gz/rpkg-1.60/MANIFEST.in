include COPYING
include COPYING-koji
include LGPL
include CHANGELOG.rst
include README.rst
include CONTRIBUTING.md
include bin/rpkg
recursive-include tests *
recursive-include etc *

include requirements/README.rst
include requirements/*.txt

global-exclude *.pyc
global-exclude __pycache__

include doc/Makefile
recursive-include doc *.rst *.py *.tmpl

# RST files under commands directory and other listed files are generated by
# script when run make each time. They should not be included source
# distribution package.
prune doc/source/commands/
exclude doc/source/cli.rst doc/source/man_pages.json
