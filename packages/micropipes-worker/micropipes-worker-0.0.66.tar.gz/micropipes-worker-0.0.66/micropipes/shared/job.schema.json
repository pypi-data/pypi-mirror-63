{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Micropipes job schema v.1.0",
  "type": "object",
  "properties": {
      "name": {
        "type": "string",
        "minLength": 1
      },
      "autostart": {
        "type": "boolean"
      },
      "priority": {
        "type": "integer",
        "default": 0,
        "description": "Job priority, if 2 or more jobs are assigning or starting at the same time. Job with bigger priority goes first"
      },
      "routes": {
        "type": "array",
        "minItems": 1,
        "items": {
          "oneOf": [
              { "$ref": "#/definitions/sequence" }
          ]
        }
      },
      "required_workers": {
        "type": "array",
        "minItems": 1,
        "items": {
          "$ref": "#/definitions/worker"
        }
      },
      "required_data_support": {
        "type": "array",
        "items": {
            "$ref": "#/definitions/data_def"
        }
      }
  },
  "required": [
      "name",
      "autostart",
      "routes",
      "required_workers"
  ],
  "definitions": {
      "data_def": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "minLength": 1
            },
            "content_type": {
              "type": "string",
              "default": "application/json"
            },
            "content_encoding": {
              "type": "string",
              "default": "utf-8"
            }
          },
          "required": [
              "name"
          ]
      },
      "worker": {
          "type": "object",
          "properties": {
            "worker_type": {
              "type": "string",
              "minLength": 1
            },
            "configuration": {
              "type": "object"
            }
          },
          "required": [
              "worker_type"
          ]
      },
      "sequence": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "type_name": {
            "const": "sequence"
          },
          "steps": {
            "type": "array",
            "minItems": 1,
            "items": {
              "$ref": "#/definitions/sequence_step"
            }
          }
        },
        "required": [
          "name", "type_name"
        ]
      },
      "sequence_step": {
          "type": "object",
          "properties": {
            "worker_type": {
              "type": "string",
              "minLength": 1
            },
            "name": {
              "type": "string",
              "minLength": 1
            }
          },
          "required": [
            "name","worker_type"
          ]
      }
  }
}