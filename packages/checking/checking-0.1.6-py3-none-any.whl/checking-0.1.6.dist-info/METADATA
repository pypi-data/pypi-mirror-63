def my_function_to_test(a,b)
    return a + b

@test
def any_name_you_like():
    # РџСЂРѕРІРµСЂСЏРµРј, С‡С‚Рѕ 1+1=2
    equals(2, my_function_to_test(1,1))

if __name__ == '__main__':
    # Р·Р°РїСѓСЃС‚РёРј РІСЃРµ С‚РµСЃС‚С‹ РІ СЌС‚РѕРј РјРѕРґСѓР»Рµ
    start()
```
РўРѕР»СЊРєРѕ С„СѓРЅРєС†РёРё, РїРѕРјРµС‡РµРЅРЅС‹Рµ Р°РЅРЅРѕС‚Р°С†РёРµР№ @test СЃС‡РёС‚Р°СЋС‚СЃСЏ С‚РµСЃС‚Р°РјРё Рё Р±СѓРґСѓС‚ Р·Р°РїСѓС‰РµРЅС‹, РјРѕР¶РµС‚Рµ РЅР°Р·С‹РІР°С‚СЊ СЃРІРѕРё С‚РµСЃС‚С‹ РєР°Рє СѓРґРѕР±РЅРѕ
